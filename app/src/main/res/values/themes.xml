<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/coral</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground">@color/coral</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/coral</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/image_splash</item>
        <!-- Toolbar -->
        <item name="android:itemBackground">?attr/colorOnPrimary</item>
        <!-- Dialogs -->
        <item name="android:alertDialogTheme">@style/dialog_alert</item>
        <!-- Text -->
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="container_fragment">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:dialogCornerRadius">20dp</item>
        <item name="materialAlertDialogBodyTextStyle">@style/dialog_alert.body</item>
        <item name="materialAlertDialogTitleTextStyle">@style/dialog_alert.title</item>
    </style>

    <style name="dialog_alert.body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_alert.title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>
