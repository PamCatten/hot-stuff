<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/coral</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Dialog -->
        <item name="shapeAppearanceLargeComponent">@style/dialog_Background</item>
    </style>

    <style name="appbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:iconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Container">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="text_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dialog_Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="dialog_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="dialog_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dialog_Background" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="items_Card">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="items_CardConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

</resources>