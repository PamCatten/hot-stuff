<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/coral</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground">@color/coral</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/coral</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_splashscreen</item>

        <!-- Dialog -->
        <item name="shapeAppearanceLargeComponent">@style/dialog_background</item>
    </style>
    <style name="toolbar_main">
        <item name="android:iconTint">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <style name="container_fragment">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <style name="text_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dialog_alert" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:dialogCornerRadius">20dp</item>
    </style>
    <style name="dialog_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="dialog_subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="dialog_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>
    <style name="dialog_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="dialog_background" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>
    <style name="text_input_field">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="card_constraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="card_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="card_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="card_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="card_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="image_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>