<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/coral</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground">@color/coral</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/coral</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_splashscreen</item>

        <!-- Dialog -->
        <item name="shapeAppearanceLargeComponent">@style/dialogBackground</item>
    </style>
    <style name="dialogBackground" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>