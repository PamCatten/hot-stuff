<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HotStuffKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Dialog -->
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HotStuffKotlin.LargeComponent</item>
    </style>

    <style name="appBar">
        <item name="android:background">@color/black</item>
        <item name="android:iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/black</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="tv_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dialog_Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="dialog_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="dialog_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ShapeAppearance.HotStuffKotlin.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>