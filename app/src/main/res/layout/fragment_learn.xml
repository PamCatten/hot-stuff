<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="?attr/actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.learn.LearnFragment">
        <androidx.cardview.widget.CardView
            android:id="@+id/learn_walkthrough_card"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/learn_walkthrough_layout"
                style="@style/card_constraint">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/learn_walkthrough_header"
                    style="@style/card_header"
                    app:layout_constraintTop_toTopOf="@id/learn_walkthrough_layout"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/learn_walkthrough_title"
                        style="@style/card_title"
                        android:text="@string/label_walkthroughs"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/learn_walkthrough_subtitle"
                        android:layout_width="wrap_content"
                        android:textColor="?attr/colorOnPrimary"
                        style="@style/card_subtitle"
                        android:text="@string/label_walkthroughs_subtitle"
                        app:layout_constraintTop_toBottomOf="@id/learn_walkthrough_title"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/learn_walkthrough_dropdown_icon"
                        style="@style/card_icon"
                        android:contentDescription="@string/desc_expand_dropdown"
                        android:src="@drawable/icon_dropdown"
                        app:tint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/learn_walkthrough_divider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintTop_toBottomOf="@id/learn_walkthrough_header"
                    app:dividerColor="?attr/colorOnPrimary"/>
                <TextView
                    android:id="@+id/learn_walkthrough_whyCare"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_why_care"
                    app:layout_constraintTop_toBottomOf="@id/learn_walkthrough_divider"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/learn_walkthrough_gettingStarted"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_get_started"
                    app:layout_constraintTop_toBottomOf="@id/learn_walkthrough_whyCare"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/learn_walkthrough_export"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_export"
                    app:layout_constraintTop_toBottomOf="@id/learn_walkthrough_gettingStarted"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/learn_walkthrough_group"
                    style="@style/card_group"
                    app:constraint_referenced_ids="
                        learn_walkthrough_divider,
                        learn_walkthrough_whyCare,
                        learn_walkthrough_gettingStarted,
                        learn_walkthrough_export"
                    tools:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/learn_resources_card"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/learn_walkthrough_card"
            style="@style/card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/learn_resources_layout"
                style="@style/card_constraint">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/learn_resources_header"
                    style="@style/card_header"
                    app:layout_constraintTop_toTopOf="@id/learn_resources_layout"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/learn_resources_title"
                        style="@style/card_title"
                        android:textSize="18sp"
                        android:text="@string/label_resources"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/learn_resources_subtitle"
                        android:layout_width="wrap_content"
                        android:textColor="?attr/colorOnPrimary"
                        style="@style/card_subtitle"
                        android:text="@string/label_resources_subtitle"
                        app:layout_constraintTop_toBottomOf="@id/learn_resources_title"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/learn_resources_dropdown_icon"
                        style="@style/card_icon"
                        android:contentDescription="@string/desc_expand_dropdown"
                        android:src="@drawable/icon_dropdown"
                        app:tint="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/learn_resources_divider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="16dp"
                    app:layout_constraintTop_toBottomOf="@id/learn_resources_header"
                    app:dividerColor="?attr/colorOnPrimary"/>
                <TextView
                    android:id="@+id/learn_resources_attentionToDetail"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_detail"
                    app:layout_constraintTop_toBottomOf="@id/learn_resources_divider"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/learn_resources_jargonGlossary"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_jargon_glossary"
                    app:layout_constraintTop_toBottomOf="@id/learn_resources_attentionToDetail"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/learn_resources_adjusters"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_adjusters"
                    app:layout_constraintTop_toBottomOf="@id/learn_resources_jargonGlossary"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/learn_resources_likeKind"
                    style="@style/card_subtitle"
                    android:paddingVertical="16dp"
                    android:text="@string/label_likeKind"
                    app:layout_constraintTop_toBottomOf="@id/learn_resources_adjusters"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/learn_resources_group"
                    style="@style/card_group"
                    app:constraint_referenced_ids="
                        learn_resources_divider,
                        learn_resources_attentionToDetail,
                        learn_resources_jargonGlossary,
                        learn_resources_adjusters,
                        learn_resources_likeKind"
                    tools:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
