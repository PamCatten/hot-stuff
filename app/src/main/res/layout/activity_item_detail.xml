<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Container"
    tools:context=".ui.ItemDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar_item_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:itemRippleColor="@null"
        app:itemBackground="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_detail_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:cropToPadding="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:layout_constraintTop_toBottomOf="@id/appbar_item_detail"
        app:srcCompat="@drawable/default_image" />
    <TextView
        android:id="@+id/item_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="20sp"
        android:text="Roku 55' 4K LED Smart TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_image"
    />
    <TextView
        android:id="@+id/item_detail_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp"
        android:text="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_name"
        />
    <TextView
        android:id="@+id/item_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        android:background="@null"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:lineHeight="30dp"
        android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at it's layout."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_description_title"
    />
    <TextView
        android:id="@+id/item_detail_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp"
        android:text="Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_description"
    />
    <TextView
        android:id="@+id/item_detail_category_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        android:background="@null"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Electronics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_category_title"
    />
    <TextView
        android:id="@+id/item_detail_room_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp"
        android:text="Room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_category_text"
    />
    <TextView
        android:id="@+id/item_detail_room_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        android:background="@null"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Kitchen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_room_title"
    />
    <TextView
        android:id="@+id/item_detail_make_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp"
        android:text="Brand / Manufacturer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_room_text"
        />
    <TextView
        android:id="@+id/item_detail_make_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        android:background="@null"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Roku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_detail_make_title"
        />
</androidx.constraintlayout.widget.ConstraintLayout>