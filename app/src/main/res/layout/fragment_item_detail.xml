<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:theme="@style/container"
    android:id="@+id/layout_item_detail"
    tools:context=".ui.items.ItemDetailFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/item_detail_appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:contentInsetStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_detail_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            app:layout_constraintTop_toBottomOf="@id/item_detail_appbar"
            app:srcCompat="@drawable/default_image"/>
<!--        <com.google.android.material.imageview.ShapeableImageView-->
<!--            android:id="@+id/item_detail_image"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="300dp"-->
<!--            android:scaleType="fitXY"-->
<!--            android:cropToPadding="true"-->
<!--            android:layout_marginHorizontal="16dp"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:elevation="8dp"-->
<!--            app:shapeAppearanceOverlay="@style/roundedImageView"-->
<!--            app:layout_constraintTop_toBottomOf="@id/item_detail_appbar"-->
<!--            app:srcCompat="@drawable/default_image"-->
<!--            />-->
        <TextView
            android:id="@+id/item_detail_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_image"
        />
        <TextView
            android:id="@+id/item_detail_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="18sp"
            android:text="Name placeholder text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_name_title"
        />
        <TextView
            android:id="@+id/item_detail_value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_name_text"
        />
        <TextView
            android:id="@+id/item_detail_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:text="Value placeholder text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_value_title"
        />
        <TextView
            android:id="@+id/item_detail_quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Quantity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_name_text"
        />
        <TextView
            android:id="@+id/item_detail_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:text="Quantity placeholder text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_quantity_title"
        />
        <TextView
            android:id="@+id/item_detail_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_quantity_text"
        />
        <TextView
            android:id="@+id/item_detail_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:lineHeight="24dp"
            android:text="Description placeholder text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_description_title"
        />
        <TextView
            android:id="@+id/item_detail_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_description_text"
        />
        <TextView
            android:id="@+id/item_detail_category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:text="Category placeholder text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_category_title"
        />
        <TextView
            android:id="@+id/item_detail_room_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Room"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_category_text"
        />
        <TextView
            android:id="@+id/item_detail_room_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:text="Room placeholder text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_room_title"
        />
        <TextView
            android:id="@+id/item_detail_make_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="Brand / Manufacturer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_room_text"
        />
        <TextView
            android:id="@+id/item_detail_make_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:text="Make placeholder text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_make_title"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_detail_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_detail_make_text">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/item_detail_delete_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:src="@drawable/icon_delete"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:tint="?attr/colorOnPrimary"
                android:elevation="10dp"
                android:contentDescription="Delete Item Button"
                app:layout_constraintEnd_toStartOf="@+id/item_detail_edit_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_detail_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:minWidth="100dp"
                android:text="Edit"
                android:textStyle="bold"
                android:backgroundTint="?attr/colorOnPrimary"
                android:textColor="?attr/colorPrimaryVariant"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="20dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>