<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:theme="@style/container_fragment"
    android:id="@+id/layout_item_detail"
    tools:context=".ui.items.ItemDetailFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/actionBarSize">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_detail_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:elevation="8dp"
            android:contentDescription="@string/desc_item_image"
            app:shapeAppearanceOverlay="@style/image_rounded"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_default_item"/>
        <TextView
            android:id="@+id/item_detail_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_image"
        />
        <TextView
            android:id="@+id/item_detail_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_name_title"
        />
        <TextView
            android:id="@+id/item_detail_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_name_text"
            />
        <TextView
            android:id="@+id/item_detail_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_category_title"
            />
        <TextView
            android:id="@+id/item_detail_room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_name_text"
            />
        <TextView
            android:id="@+id/item_detail_room_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_room_title"
            />
        <TextView
            android:id="@+id/item_detail_value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_category_text"
        />
        <TextView
            android:id="@+id/item_detail_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_value_title"
        />
        <TextView
            android:id="@+id/item_detail_quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_quantity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_room_text"
        />
        <TextView
            android:id="@+id/item_detail_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_quantity_title"
        />
        <TextView
            android:id="@+id/item_detail_make_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_make"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_value_text"
        />
        <TextView
            android:id="@+id/item_detail_make_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_make_title"
        />
        <TextView
            android:id="@+id/item_detail_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@null"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            android:text="@string/label_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_make_text"
            />
        <TextView
            android:id="@+id/item_detail_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="?attr/actionBarSize"
            android:background="@null"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:lineHeight="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_detail_description_title"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_detail_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_detail_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:minWidth="100dp"
                app:icon="@drawable/icon_edit"
                app:iconTint="?attr/colorPrimaryVariant"
                android:text="@string/label_edit"
                android:textStyle="bold"
                android:backgroundTint="?attr/colorOnPrimary"
                android:textColor="?attr/colorPrimaryVariant"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_detail_delete_button"
                app:cornerRadius="20dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_detail_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:minWidth="100dp"
                app:icon="@drawable/icon_delete"
                app:iconTint="?attr/colorPrimaryVariant"
                android:text="@string/label_delete"
                android:textStyle="bold"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorPrimaryVariant"
                android:contentDescription="@string/desc_delete_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cornerRadius="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>