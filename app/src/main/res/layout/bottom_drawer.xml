<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/drawer_title"
            android:theme="@style/drawer_Title"
            android:text="@string/create_label"
            style="@style/drawer_Title"/>
        <ImageView
            android:id="@+id/drawer_closeButton_icon"
            android:src="@drawable/icon_close"
            style="@style/drawer_Icon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/drawer_layoutNewItem"
        style="@style/drawer_linearLayout">
        <ImageView
            android:id="@+id/drawer_createItem_icon"
            android:src="@drawable/icon_items"
            style="@style/drawer_Icon"/>
        <TextView
            android:text="@string/drawer_newItem_prompt"
            style="@style/drawer_Subtitle"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/drawer_layoutNewBuilding"
        style="@style/drawer_linearLayout">
        <ImageView
            android:id="@+id/drawer_createBuilding_icon"
            android:src="@drawable/icon_create_building"
            style="@style/drawer_Icon"/>
        <TextView
            android:text="@string/drawer_newBuilding_prompt"
            style="@style/drawer_Subtitle"/>
    </LinearLayout>
</LinearLayout>