<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/onboard_three_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:scaleType="fitXY"
        android:cropToPadding="true"
        android:contentDescription="@string/desc_onboard_image"
        android:src="@drawable/image_onboard_three"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:layout_margin="32dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/onboard_three_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboard_three_title"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/onboard_three_text"
            style="@style/text_onboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboard_three_text"
            app:layout_constraintTop_toBottomOf="@id/onboard_three_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboard_three_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button_onboard_skip"
            app:cornerRadius="25dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@id/onboard_three_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@id/onboard_three_continue_button"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/onboard_three_continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button_onboard_continue"
            app:cornerRadius="25dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@id/onboard_three_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>