<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/item_Card">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp">
        <ImageView
            android:id="@+id/imageview"
            android:background="@null"
            android:layout_width="40dp"
            app:tint="?attr/colorOnPrimary"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="@id/itemCard"/>
        <TextView
            android:id="@+id/textView"
            style="@style/text_Subtitle"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="@id/itemCard"/>
        <TextView
            android:id="@+id/textViewSubtitle"
            style="@style/text_Body"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="@id/itemCard"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:text="Brand/Manufacturer"/>
        <TextView
            android:id="@+id/textViewDescription"
            style="@style/text_Body"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/itemCard"
            app:layout_constraintTop_toBottomOf="@id/textViewSubtitle"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor labore."/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>