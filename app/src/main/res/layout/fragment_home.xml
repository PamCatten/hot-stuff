<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="?attr/actionBarSize"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topTextLayout">
        <TextView
            android:id="@+id/tvBuildingValue"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/tv_Title"
            android:text="Building Value"
            app:layout_constraintStart_toStartOf="@id/topTextLayout"
            />

        <TextView
            android:id="@+id/tvActiveBuildingValue"
            style="@style/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$6,500.00"
            app:layout_constraintEnd_toEndOf="@id/topTextLayout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleTextLayout"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/topTextLayout" >
        <TextView
            android:id="@+id/tvActiveBuildingName"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/tv_Subtitle"
            android:text="Sample House"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tvActiveBuildingCount"
            style="@style/tv_Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/coral"
            android:text="18 items" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/topBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/middleTextLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomTextLayout"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/topBarChart"
        app:layout_constraintBottom_toBottomOf="@id/bottomBarChart">
        <TextView
            android:id="@+id/tvItemDistribution"
            style="@style/tv_Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Item Distribution"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:text="Category"
                app:layout_constraintEnd_toEndOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bottomBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>