<!--            android:key="@string/key_scale"-->
<!--            android:summary="@string/label_scale_summary"-->
<!--            app:iconSpaceReserved="false"/>-->
    </PreferenceCategory>
    <PreferenceCategory android:title="Building Information" app:iconSpaceReserved="false">
        <EditTextPreference
            android:title="Name"
            android:dialogTitle="Building Name"
            android:key="@string/key_buildingName"
            android:summary="Change your building\'s name"
            app:iconSpaceReserved="false"/>
        <ListPreference
            android:title="Type"
            android:dialogTitle="Building Type"
            android:entries="@array/building_type"
            android:entryValues="@array/building_type_values"
            android:key="@string/key_buildingType"
            android:summary="Change your building\'s type"
            app:iconSpaceReserved="false"/>
        <EditTextPreference
            android:title="Description"
            android:dialogTitle="Building Description"
            android:key="@string/key_buildingDesc"
            android:summary="Change your building\'s description"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/label_contact" app:iconSpaceReserved="false">
        <Preference
            android:title="@string/label_rate"
            android:summary="@string/label_rate_summary"
            android:key="@string/key_rate"
            app:iconSpaceReserved="false" />
        <Preference
            android:title="@string/label_report"
            android:summary="@string/label_report_summary"
            android:key="@string/key_report"
            app:iconSpaceReserved="false" />
        <Preference
            android:title="@string/label_feedback"
            android:summary="@string/label_feedback_summary"
            android:key="@string/key_feedback"
            app:iconSpaceReserved="false" />
        <Preference
            android:title="@string/label_email"
            android:summary="@string/label_email_summary"
            android:key="@string/key_email"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/label_app_info" app:iconSpaceReserved="false">
        <Preference
            android:title="@string/label_share"
            android:summary="@string/label_share_summary"
            android:key="@string/key_share"
            app:iconSpaceReserved="false" />
        <Preference
            android:title="@string/label_source_code"
            android:summary="@string/label_source_code_summary"
            android:key="@string/key_source_code"
            app:iconSpaceReserved="false"/>
        <Preference
            android:title="@string/label_terms"
            android:summary="@string/label_terms_summary"
            android:key="@string/key_terms"
            app:iconSpaceReserved="false" />
        <Preference
            android:title="@string/label_open_source"
            android:summary="@string/label_open_source_summary"
            android:key="@string/key_open_source"
            app:iconSpaceReserved="false"/>
        <Preference
            android:title="@string/label_version_number"
